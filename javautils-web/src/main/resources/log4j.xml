<?xml version="1.0" encoding="GBK" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="append" value="true" />
        <param name="datePattern" value="'_'yyyy-MM-dd" />
        <param name="encoding" value="UTF-8" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %t [%F:%L] %-5p : %m%n" />
        </layout>
    </appender>

    <appender name="open-info" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/srv/logs/open/open-all.log" />
        <param name="append" value="true" />
        <param name="datePattern" value="'_'yyyy-MM-dd" />
        <param name="encoding" value="UTF-8" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %t [%F:%L] %-5p : %m%n" />
        </layout>
    </appender>

    <appender name="open-error" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/srv/logs/open/open-error.log" />
        <param name="append" value="true" />
        <param name="datePattern" value="'_'yyyy-MM-dd" />
        <param name="threshold" value="ERROR" />
        <param name="encoding" value="UTF-8" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %t [%F:%L] %-5p : %m%n" />
        </layout>
    </appender>

    <logger name="org.springframework" additivity="true">
        <level value="info" />
        <appender-ref ref="open-info" />
        <appender-ref ref="console" />
    </logger>
    <logger name="com.mybatis" additivity="false">
        <level value="INFO" />
        <appender-ref ref="open-error" />
    </logger>
    <logger name="java.sql.Connection" additivity="false">
        <level value="INFO" />
        <appender-ref ref="open-error" />
    </logger>
    <logger name="java.sql.Statement" additivity="false">
        <level value="INFO" />
        <appender-ref ref="open-error" />
    </logger>
    <logger name="java.sql.PreparedStatement" additivity="false">
        <level value="INFO" />
        <appender-ref ref="open-error" />
    </logger>
    <logger name="java.sql.ResultSet" additivity="false">
        <level value="INFO" />
        <appender-ref ref="open-error" />
    </logger>
    <logger name="org.apache" additivity="true">
        <level value="ERROR" />
        <appender-ref ref="open-error" />
    </logger>
    <logger name="com.wt" additivity="false">
        <level value="info" />
        <appender-ref ref="open-info" />
        <appender-ref ref="console" />
    </logger>
    <logger name="com.taobao.metamorphosis" additivity="false">
        <level value="info" />
        <appender-ref ref="open-info" />
        <appender-ref ref="console" />
    </logger>
    <logger name="com.taobao.gecko.core.nio" additivity="false">
        <level value="info" />
        <appender-ref ref="open-info" />
        <appender-ref ref="console" />
    </logger>
    <logger name="com.taobao" additivity="false">
        <level value="info" />
        <appender-ref ref="open-info" />
        <appender-ref ref="console" />
    </logger>

    <root>
        <level value="console" />
        <appender-ref ref="open-info" />
        <appender-ref ref="open-error" />
    </root>
</log4j:configuration>
